<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inbox</title>

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f1f1f1;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        ul {
            list-style: none;
            padding: 0;
            margin: 20px;
        }

        li {
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            margin-bottom: 15px;
            padding: 15px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        p {
            margin: 0;
            color: #555;
        }

        p:first-child {
            font-weight: bold;
            color: #333;
        }

        .no-records {
            text-align: center;
            color: #777;
        }
    </style>
</head>
<body>
    <h1>Inbox</h1>

    <% if (paymentRecords.length > 0) { %>
        <ul>
            <% paymentRecords.forEach(record => { %>
                <li>
                    <p>Time and Date: <%= record.timeAndDate %></p>
                    <p>Credit Card Number: <%= record.creditCardNumber %></p>
                    <p>Requested Amount: <%= record.requestedAmount %></p>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p class="no-records">No payment records found.</p>
    <% } %>

</body>
</html>
